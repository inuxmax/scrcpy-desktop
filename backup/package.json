  "license": "MIT",
  "description": "Web application for scrcpy screen and audio streaming.",
  "dependencies": {
    "@devicefarmer/adbkit": "^3.3.8",
    "broadway-player": "^0.1.1",
    "cpy-cli": "^5.0.0",
    "express": "^5.1.0",
    "h264-converter": "^0.1.4",
    "nanoid": "^5.1.5",
    "node-dns-sd": "^1.0.1",
    "qrcode": "^1.5.4",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "parcel": "^2.14.4",
    "process": "^0.11.10",
    "rimraf": "^5.0.10",
    "svgo": "^3.3.2"
  }
}
